<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml" fx:controller="ee.tut.fundamentals.chat.ChatController">
  <bottom>
    <TextField onAction="#handleButtonAction" prefWidth="200.0" fx:id="say" />
  </bottom>
  <center>
    <TextArea fx:id="chat" focusTraversable="false"  editable="false" wrapText="true" BorderPane.alignment="CENTER">
      <BorderPane.margin>
        <Insets bottom="20.0" />
      </BorderPane.margin>
    </TextArea>
  </center>
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
  <top>
    <Label alignment="CENTER" contentDisplay="RIGHT" text="Simple Chat Client" BorderPane.alignment="CENTER">
      <font>
        <Font name="System Bold" size="20.0" />
      </font>
      <BorderPane.margin>
        <Insets />
      </BorderPane.margin>
    </Label>
  </top>
</BorderPane>
